<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_client_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.zweifel.app.myapplication1.ClientSettingsActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <TextView
            android:text="Cleint Settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cleintSettingsName"
            android:textSize="30sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="2"/>

        <TextView
            android:text="current host"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/clientSettingsText2"
            android:layout_row="1"
            android:layout_column="0"/>

        <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/clientSettingsText3"
            android:layout_row="1"
            android:layout_column="1"/>

        <TextView
            android:text="serverhost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/clientSettingsText1"
            android:textSize="24sp"
            android:layout_column="0"
            android:layout_row="2"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text=""
            android:ems="10"
            android:id="@+id/clientSettingsServerhost"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_gravity="fill"/>

        <Button
            android:text="safe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/clientSettingsBack"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_row="13"
            android:layout_column="1"
            android:id="@+id/clientSettingsSave"
            android:onClick="clientSettingsSave" />

        <Button
            android:text="back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/clientSettingsBack"
            android:layout_row="13"
            android:layout_column="0"
            android:onClick="clientSettingsBack" />
    </GridLayout>
</RelativeLayout>
